# hostapd build configuration for our Wi-Fi AP scenario

CONFIG_DRIVER_HOSTAP=y
CONFIG_DRIVER_NL80211=y
CONFIG_LIBNL32=y

CONFIG_RSN_PREAUTH=y
CONFIG_EAP=y
CONFIG_ERP=y
CONFIG_EAP_MD5=y
CONFIG_EAP_TLS=y
CONFIG_EAP_MSCHAPV2=y
CONFIG_EAP_PEAP=y
CONFIG_EAP_GTC=y
CONFIG_EAP_TTLS=y
CONFIG_PKCS12=y
CONFIG_IPV6=y

# Enable 802.11ac (Wi-Fi 5)
CONFIG_IEEE80211AC=y

# Enable 802.11ax (Wi-Fi 6)
CONFIG_IEEE80211AX=y

# WPA3-Personal (Simultaneous Authentication of Equals)
CONFIG_SAE=y
CONFIG_SAE_PK=y

# TLS support (OpenSSL)
CONFIG_TLS=openssl
CONFIG_TLSV11=y
CONFIG_TLSV12=y

# Use modern random source
CONFIG_GETRANDOM=y

# WPA CLI editing (optional but nice)
CONFIG_WPA_CLI_EDIT=y

# Opportunistic Wireless Encryption (OWE)
CONFIG_OWE=y

# Device Provisioning Protocol (for Wi-Fi Easy Connect)
CONFIG_DPP=y
CONFIG_DPP2=y

# Optional debugging
#CONFIG_DEBUG_FILE=y

# Keep binary smaller (no debug to stdout)
#CONFIG_NO_STDOUT_DEBUG=y
